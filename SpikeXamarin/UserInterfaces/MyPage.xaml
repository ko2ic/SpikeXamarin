<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:local="clr-namespace:SpikeXamarin.UserInterfaces" 
             xmlns:cell="clr-namespace:SpikeXamarin.UserInterfaces.Cell"
             x:Class="SpikeXamarin.UserInterfaces.MyPage"
             xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
             ios:Page.UseSafeArea="true" 
             NavigationPage.HasNavigationBar="False">


    
    <StackLayout >
    
        <SearchBar />
        
        <ListView x:Name="listView" ItemsSource="{Binding}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <cell:MyCell Name="{Binding Name}" Stars="{Binding Stars}"/>        
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

    </StackLayout>
</ContentPage>
